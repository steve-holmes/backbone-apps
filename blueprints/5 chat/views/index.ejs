<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title> A Chat Application </title>
    <link rel="stylesheet" href="css/style.css" />
</head>
<body>
    <div id="main"></div>
    
    <script type="text/template" id="user">
        {{ name }}
    </script>
    
    <script type="text/template" id="appLayout">
        <div id="users"></div>
        <div id="conversation"></div>
        <div id="rooms"></div>
        <div id="controls"></div>
    </script>
    
    <script type="text/template" id="form">
        <input type="text" placeholder="{{placeholder}}" />
        <button> {{button}} </button>
    </script>
    
    <script type="text/template" id="room">
        <a href="/room/{{ name }}">{{ name }}</a>
    </script>
    
    <script type="text/template" id="message">
        <strong> {{ user }} </strong>
        {{ text }}
        <span> {{ moment(date).fromNow() }} </span>
    </script>

    <script src="/lib/jquery.js"></script>
    <script src="/lib/moment.js"></script>
    <script src="/lib/underscore.js"></script>
    <script src="/lib/backbone.js"></script>
    <script src="/lib/backbone.marionette.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/app.js"></script>
    <script src="/socket.js"></script>
    <script src="/users.js"></script>
    <script src="/rooms.js"></script>
    <script src="/chat.js"></script>
    <script src="/layout.js"></script>
    <script src="/router.js"></script>
    
    <script>
        App.start();
    </script>
</body>
</html>